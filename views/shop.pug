extends layouts/main-layout.pug 
block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid 
                each product in prods
                    article.card.product-item
                        header.card_header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://image.freepik.com/free-psd/book-cover-mockup_125540-572.jpg")
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book so many even
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products